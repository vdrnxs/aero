# ==========================================
# Network Configuration
# ==========================================
# Local development node (Anvil)
NEXT_PUBLIC_LOCAL_RPC_URL=http://127.0.0.1:8545

# Enable testnets (set to "true" to enable Sepolia)
NEXT_PUBLIC_ENABLE_TESTNETS=false

# ==========================================
# Contract Addresses
# ==========================================
# Update these after deploying contracts
# Local (Anvil)
NEXT_PUBLIC_SIMPLE_TOKEN_ADDRESS_LOCAL=

# Sepolia testnet (optional)
NEXT_PUBLIC_SIMPLE_TOKEN_ADDRESS_SEPOLIA=

# ==========================================
# RPC URLs (Optional - for testnets)
# ==========================================
# Get free RPC URLs from:
# - Alchemy: https://www.alchemy.com/
# - Infura: https://infura.io/
# - Public RPCs: https://chainlist.org/

# Sepolia testnet
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Mainnet (for production)
NEXT_PUBLIC_MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ==========================================
# Contract Verification (Optional)
# ==========================================
# Get API key from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=
